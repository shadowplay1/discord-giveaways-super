{
	"compilerOptions": {
		"plugins": [
			{
				"name": "jsdoc-babel",
			}
		]
	},
	"source": {
		"includePattern": ".+\\.ts?$",
		"excludePattern": ".+\\.(test|spec).ts"
	},
	"babel": {
		"extensions": [
			"ts"
		],
		"babelrc": false,
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": true
					}
				}
			],
			"@babel/preset-typescript"
		],
		"plugins": [
			"@babel/proposal-class-properties",
			"@babel/proposal-object-rest-spread"
		]
	}
}
